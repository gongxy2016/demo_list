<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.demo.gong.mydemoapplication.DemoAnimation.DemoAnimationActivity">

    <Button
        android:id="@+id/btn_tween_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="补间动画TweenAnimation"/>

    <Button
        android:id="@+id/btn_frame_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帧动画FrameAnimation"/>

    <Button
        android:id="@+id/btn_property_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="属性动画PropertyAnimation"/>

</LinearLayout>
